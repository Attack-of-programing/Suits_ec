<h2>管理者ログイン</h2>

<%= form_with model: @admin, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
<table>
  <div class="field">
    <span> メールアドレス </span>
    <span> <%= f.email_field :email, autofocus: true, autocomplete: "email" %>  </span>
  </div>

  <div class="field">
    <span>　パスワード </span>
    <span><%= f.password_field :password, autocomplete: "current-password" %></span>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" , class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
