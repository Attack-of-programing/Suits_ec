<div class="container">
  <div class="row">


<%= form_with model: @customer, url: customer_session_path, local: true do |f| %>

<div class="col-xs-offset-2 col-xs-8 col-xs-offset-2" style="margin-top: 100px;">

<form class= "form-horizontal" >
  <div class="form-group" >
    <p>会員の方はこちらからログイン</p>
    <label class="col-xs-3 control-label" style="margin-top: 25px;">メールアドレス</label>
    <div class="col-xs-9">
      <%= f.email_field :email, class: "form-control", style: "margin-top: 20px;", autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  <div class="form-group" style="margin-top: 20px;" >
    <label class="col-xs-3 control-label" style="margin-top: 25px;" >パスワード</label>
    <div class="col-xs-9">
      <%= f.password_field :password, class: "form-control", style: "margin-top: 20px;", autocomplete: "current-password" %>
    </div>
  </div>
</form>

<div class="col-xs-offset-3 col-xs-3">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
</div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>


<% end %>




<%= render "customers/shared/links" %>

</div>