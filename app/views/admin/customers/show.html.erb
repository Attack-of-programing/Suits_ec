<%= render 'admin/admin_header' %>

<div class="container">
  <!--サクセスメッセージ-->
  <%= flash[:notice] %>

  <div class="row">
    <div class="col-xs-6">
      <!--タイトル-->
      <h2 class="title"><%= @customer.full_name %>さんの会員詳細</h2>
　　　<!--表示フォーム-->
      <div class="row form-group" >
        <label class="col-xs-3 control-label" >顧客ID</label>
        <div class="col-xs-2">
          <%= @customer.id %>
        </div>
        <!--会員ステータス表示-->
        <div class= "col-xs-2 text-center" %>
        <% if @customer.is_deleted? %>
          <P class="is_deleted_status" >退会済み</P>
        <% else %>
          <p class="is_deleted_status">有効会員</p>
        <% end %>
        </div>
      </div>

      <div class="row form-group" >
        <label class="col-xs-3 control-label" >氏名</label>
        <div class="col-xs-9">
          <%= @customer.full_name %>
        </div>
      </div>

      <div class="row form-group" >
        <label class="col-xs-3 control-label" >フリガナ</label>
        <div class="col-xs-9">
          <%= @customer.full_name_kana %>
        </div>
      </div>

      <div class="row form-group" >
        <label class="col-xs-3 control-label" >郵便番号</label>
        <div class="col-xs-9">
          <%= @customer.postcode %>
        </div>
      </div>

      <div class="row form-group" >
        <label class="col-xs-3 control-label" >住所</label>
        <div class="col-xs-9">
          <%= @customer.address %>
        </div>
      </div>

      <div class="row form-group" >
        <label class="col-xs-3 control-label" >電話番号</label>
        <div class="col-xs-9">
          <%= @customer.phone_number %>
        </div>
      </div>

      <div class="row form-group" >
        <label class="col-xs-3 control-label" >メールアドレス</label>
        <div class="col-xs-9">
          <%= @customer.email%>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-xs-3 control-label">
          <%=link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-primary form-control" %>
        </div>
        <div class="col-xs-4 control-label">
          <%=link_to "注文履歴一覧を見る", admin_order_path(@customer.id), class: "btn btn-primary form-control" %>
        </div>
      </div>
    </div>
  </div>
</div>