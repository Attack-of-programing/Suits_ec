<%= render 'admin/admin_header' %>
<div class="container">
  
  <h2 class="title">注文履歴一覧</h2>
  <div class="row">
	  <!--注文履歴一覧 -->
		<div class="col-xs-10 col-xs-offset-1">
      <table class="table">
        <!--注文一覧 テーブルヘッダー-->
        <thead class="thead bg-primary">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
	        
	      <!--注文履歴一覧 テーブルボディ-->
        <tbody class ="tbody bg-default">
          <% @orders.each do |order| %>
            <tr>
			        <td><%= link_to (l order.created_at), admin_order_path(order), class: "link" %></td>
			        <td><%= order.customer.full_name %></td>
			        <td><%= order.order_products.sum { |hash| hash[:number]} %></td>
			        <td><%= order.order_status %></td>
		       	</tr>
	        <% end %>
	      </tbody>
      </table>
    <div class="text-center"><%= paginate(@orders) %></div>
		</div>
  </div>
</div>