<header class="navbar navbar-default">
  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <%= link_to admin_path do %>
        <%= image_tag "nagano_cake_logo.png", :size => '100x60' %>
      <% end %>
      <!--<font size="5"><strong>Suits_ec</strong></font>-->
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if admin_signed_in? %>
          <li><%= link_to ' 商品一覧', admin_products_path, class: 'btn btn-info admin-login-header-link' %></li>
          <li><%= link_to ' 会員一覧', admin_customers_path, class: 'btn btn-info admin-login-header-link'  %></li>
          <li><%= link_to ' 注文履歴一覧', admin_orders_path, class: 'btn btn-info admin-login-header-link' %></li>
          <li><%= link_to ' ジャンル一覧', admin_genres_path, class: 'btn btn-info admin-login-header-link' %></li>
          <li><%= link_to ' ログアウト', destroy_admin_session_path, method: :delete, class: 'btn btn-info admin-login-header-link'  %></li><br>
          <div class="pull-right row">
            <%= form_with url: admin_search_path, method: :get, class: "form-inline", local: true do |f| %>
              <div class="col-sm-4">
                <%= f.select :model, [["会員検索","Customer"],["商品検索","Product"],["ジャンル検索","Genre"]], {}, {class: "form-control input-sm"} %>
              </div>
              <div class="col-sm-8">
                <%= f.text_field :content, :placeholder => "Search", class:"search-bar col-sm-4 form-control input-sm" %>
                <%= f.button :type => "submit", style: 'border-style: none;', class:"btn search-btn" do %>
                  <i class='fas fa-search'></i>
                <% end %>
                
              </div>
                
              </div>
            <% end %>
          </div>
          
        <% else %>
          <li><%= link_to ' About', about_path, class: 'btn btn-info'  %></li>
          <li><%= link_to ' 商品一覧', products_path, class: 'btn btn-info'  %></li>
          <li><%= link_to ' 新規登録', new_customer_registration_path, class: 'btn btn-info'  %></li>
          <li><%= link_to ' ログイン', new_admin_session_path, class: 'btn btn-info' %></li>
        <% end %>
      </ul>
        
    </nav>
  </div>
</header>