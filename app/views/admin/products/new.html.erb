<%= render 'customer/customer_header' %>
<div class="container">
  <h2 class="title">商品新規登録</h2>
  <div class="row">
    <%= form_with model: @product, url: admin_products_path, method: :post, local: true do |f| %>

    	<!-- エラーメッセージ表示-->
    	<!-- 後日部分テンプレート化する -->
    	<% if @product.errors.any? %>
    		<div id="error_explanation">
    			<h3><%= @product.errors.count %>error prohibited this obj from being saved:</h3>
    			<ul>
    				<% @product.errors.full_messages.each do |message| %>
    				<li><%= message %></li>
    				<% end %>
    			</ul>
    		</div>
    	<% end %>
    	<!-- エラーメッセージ表示-->
    	
    	<div class="col-xs-4">
  	    <!--ここから　商品画像のプレビューは余裕があればAjaxで実装-->
  	    <!--ここまで　商品画像のプレビューは余裕があればAjaxで実装-->
      	<div class="field">
      		<%= f.attachment_field :image %>
      	</div>
      </div>
      
      <div class="col-xs-8">
        <div class="form-group">
    		  <%= f.label "商品名", class: "col-sm-3 control-label" %>
      		<%= f.text_field :name %>
      	</div>
      	
      	<div class="form-group">
      		<%= f.label "商品説明", class: "col-sm-3 control-label" %>
      		<%= f.text_area :explanation %>
      	</div>
      	
      	<div class="form-group">
      		<%= f.label "ジャンル", class: "col-sm-3 control-label" %>
      		<!--ここから ジャンル機能が実施された後、必ず消す-->
      		<%= f.text_field :genre_id %>
      		<!--ここまで ジャンル機能が実施された後、必ず消す-->
      		<!-- f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --") -->
      	</div>
      	
      	<div class="form-group">
      		<%= f.label "税別価格", class: "col-sm-3 control-label" %>
      		<%= f.text_field :after_tax_price %>円
      	</div>
      	
      	<div class="form-group">
      		<%= f.label "販売ステータス", class: "col-sm-3 control-label" %>
      		<%= f.select :is_sale, [['販売中',true],['販売停止中',false]], {include_blank: '--選択してください--'} %>
      	</div>
      	
      	<div class="actions col-xs-9">
  	      <%= f.submit "新規登録", class: "btn btn-primary btn-lg pull-right" %>
        </div>
      	
      </div>
    <% end %>
  </div>
</div>