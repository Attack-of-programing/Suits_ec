<%= render 'customer/customer_header' %>

<div class="container" >
  <div class="row">
      <div class="col-xs-9">

      <%= form_with model: @order, url: confirm_orders_path, local: true do |f| %>

      <!--エラーメッセージ-->
      <%= render 'layouts/errors', obj: @order %>

      <h2 class="title">注文情報入力</h2>

      <div class="row form-group">
        <h3>支払方法</h3>
        <%= f.radio_button :pay_method, "クレジットカード", checked: true %>
        <%= f.label :pay_method, "クレジットカード" %></br>
        <%= f.radio_button :pay_method, "銀行振込" %>
        <%= f.label :pay_method, "銀行振込" %>
      </div>

      <div class="row form-group">
        <h3>お届け先</h3>
        <!--会員登録の住所-->
        <label><%= f.radio_button :shipping_address, "0", checked: true %>ご自身の住所</label></br>
        &nbsp;&nbsp;<%= @customer.postcode %> <%= @customer.address %></br>
        &nbsp;&nbsp;<%= @customer.full_name %>
      </div>

      <div class="row form-group">
        <label><%= f.radio_button :shipping_address, "1" %>登録済み住所から選択</label></br>
        <!--配送先が空だったら？-->
        <% if @shippings.count != 0 %>
          <div class="col-xs-6 form-control">
            <!--参照先id,変数,何番目をとってきたかのid,選択肢-->
            <%= f.collection_select :shipping_id, @shippings, :id, :full_address, {prompt: "選択してください"} %>
          </div>
        <% else %>
          <div class="col-xs-6 form-control">
            <p>現在登録されている配送先はありません</p>
          </div>
        <% end %>
      </div>

      <div class="row form-group">
        <label><%= f.radio_button :shipping_address, "2" %>新しいお届け先</label></br>

        <div class="row field">
          <p class="col-xs-3 control-label">郵便番号（ハイフンなし）</p>
          <div class="col-xs-3">
            <%= f.text_field :postcode, class:"form-control" %>
          </div>
        </div>

        <div class="row field">
          <p class="col-xs-3 control-label">住所</p>
          <div class="col-xs-5">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="row field">
          <p class="col-xs-3 control-label">宛名</p>
          <div class="col-xs-3">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
  </div>

    <div class="row ">
      <div class="col-xs-2 col-xs-offset-5">
        <%= f.submit '確認画面へ進む', class:"btn btn-primary btn-lg" %>
      </div>
    </div>

<% end %>




</div>

<%= render 'customer/footer' %>