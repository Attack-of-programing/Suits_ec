<%= render 'customer/customer_header' %>
<div class="container">
  <div class= "row">
  <notice><%=notice %></notice>
  <h2 class = "title">注文履歴一覧</h2>
      <!--注文履歴一覧画面 -->
    <div class="col-xs-14">
      <table class="table table-bordered">
        <!--注文履歴一覧画面 一段目-->
        <thead class="thead bg-primary">
          <tr>
            <th class="col-xs-2">注文日</th>
            <th class="col-xs-4">配送先</th>
            <th class="col-xs-2">注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          <tr>
        </thead>
        <!--注文履歴一覧画面 二段目以降-->
        <tbody>
          <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d')%></td>
        <td>
          <%= order.postcode%><br/>
          <%= order.address%><br/>
          <%= order.name%>
        </td>
        <td>
         <%= order.order_products.map{|order_product| order_product.product.name}.join('<br>').html_safe %>
          </td>
        <td><%= order.total_price.to_s(:delimited)%>円</td>
        <td><%= order.order_status%></td>
        <td>
           <%= link_to '表示する', order_path(order), class: "btn btn-primary" %>
        </td>
       </tr>
          <% end %>
       </tbody>
     </table>
   </div>




  </div>
</div>
 <%= render "customer/footer"%>